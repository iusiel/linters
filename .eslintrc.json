{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "complexity": ["error", 5],
        "max-depth": ["error", 4],
        "max-nested-callbacks": ["error", 3],
        "max-len": ["error", 200],
        "import/extensions": "off",
        "import/no-extraneous-dependencies": "off",
        "vue/multi-word-component-names": "off"
    }
}
